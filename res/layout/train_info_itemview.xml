<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="vertical"
    android:rowCount="5" >

    <Space android:layout_row="1" />

    <TextView
        android:id="@+id/train_code"
        android:layout_column="0"
        android:layout_gravity="left|center_vertical"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:text="K9052" />

    <Space android:layout_row="3" />

    <Space android:layout_row="4" />

    <TextView
        android:id="@+id/itemview_from_station"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:text="娄底" />

    <TextView
        android:id="@+id/start_time"
        android:layout_column="1"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:text="08:11"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="18dp"
        android:layout_column="2"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="0"
        android:src="@drawable/ic_action_forward" />

    <TextView
        android:id="@+id/lishi"
        android:layout_column="2"
        android:layout_gravity="top|center_horizontal"
        android:layout_row="1"
        android:text="8小时43分"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/itemview_to_station"
        android:layout_column="3"
        android:layout_gravity="center_horizontal"
        android:layout_row="0"
        android:text="深圳" />

    <TextView
        android:id="@+id/arrive_time"
        android:layout_column="3"
        android:layout_gravity="center_horizontal"
        android:layout_row="1"
        android:text="05:11"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/seattype_1"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="软卧：12"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/seattype_2"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="硬卧：12"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/seattype_3"
        android:layout_column="2"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="硬座：45"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/seattype_4"
        android:layout_column="3"
        android:layout_gravity="left|top"
        android:layout_row="2"
        android:text="无座：234"
        android:textSize="10sp" />

</GridLayout>