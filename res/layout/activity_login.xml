<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity" >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="false"
        android:layout_marginTop="17dp"
        android:text="密码" />

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="liqiao100@yahoo.cn" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/username"
        android:layout_toLeftOf="@+id/username"
        android:text="用户名" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/username"
        android:layout_marginRight="14dp"
        android:ems="10"
        android:hint="815720q"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passcodeimage"
        android:layout_toRightOf="@+id/textView2"
        android:text="login" />

    <TextView
        android:id="@+id/passcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/passcodeimage"
        android:layout_alignLeft="@+id/textView3"
        android:text="验证码" />

    <ImageView
        android:id="@+id/passcodeimage"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:layout_below="@+id/password"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@+id/login"
        android:minHeight="35dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_action_back" />

   <EditText
       android:id="@+id/passcode"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignLeft="@+id/login"
       android:layout_alignRight="@+id/login"
       android:layout_alignTop="@+id/passcodeimage"
       android:ems="10"
       android:maxLength="4"
       android:maxLines="1" >

    </EditText>

</RelativeLayout>