<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="6dp"
    android:background="@color/btn_endcolor"
    android:orientation="vertical"
    android:paddingTop="5dp"
    tools:context="com.example.zero1.BookViewActivity" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <TextView
            android:id="@+id/bv_trainnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:padding="12dp"
            android:text="K9085"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/bookviewactivity_textsize_3" />

        <TextView
            android:id="@+id/bv_startstation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:minWidth="46dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="广州"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/bookviewactivity_textsize_2" />

        <TextView
            android:id="@+id/bv_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView6"
            android:layout_toLeftOf="@+id/textView7"
            android:paddingTop="8dp"
            android:text="14:38"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/bookviewactivity_textsize_2" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:paddingBottom="8dp"
            android:text="-"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/bv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/bv_trainnum"
            android:minWidth="56dp"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:text="10月7日"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/bookviewactivity_textsize_2" />

        <TextView
            android:id="@+id/bv_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bv_date"
            android:layout_below="@+id/bv_date"
            android:minWidth="46dp"
            android:paddingBottom="8dp"
            android:paddingLeft="8dp"
            android:text="周二"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/bookviewactivity_textsize_2" />

        <TextView
            android:id="@+id/bv_arrivetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/bv_starttime"
            android:layout_below="@+id/bv_starttime"
            android:paddingBottom="8dp"
            android:text="00:05"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/bookviewactivity_textsize_2" />

        <TextView
            android:id="@+id/bv_arrivestation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/bv_date"
            android:minWidth="46dp"
            android:paddingBottom="8dp"
            android:paddingRight="8dp"
            android:text="娄底"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/bookviewactivity_textsize_2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bv_arrivestation"
            android:layout_toLeftOf="@+id/bv_startstation"
            android:paddingTop="8dp"
            android:text="-"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/bv_priceinfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="软卧￥353 硬卧￥190 硬座￥105 无座￥105"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/bookviewacticity_textsize_1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:background="@color/white"
        android:orientation="vertical" >

        <com.example.zero1.TicketConfirmListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white" >
            
        </com.example.zero1.TicketConfirmListView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center_horizontal" >

        <TextView
            android:id="@+id/addpassengerbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bottonrow_bg_selector"
            android:text="添加购票人"
            android:textSize="@dimen/bookviewactivity_textsize_3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >

        <EditText
            android:id="@+id/editText1"
            android:inputType="text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10" >

     
        </EditText>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_action_remove" />

    </LinearLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认提交" />

</LinearLayout>